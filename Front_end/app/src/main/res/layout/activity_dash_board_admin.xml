<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".Admin.Admin_Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="32dp">

        <!-- Welcome -->
        <TextView
            android:id="@+id/welcome_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Welcome, Admin!"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Button: View All Reports -->
        <Button
            android:id="@+id/admin_dashboard_reports_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/primary_color"
            android:paddingVertical="14dp"
            android:text="ðŸ“„ View All Reports"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Button: Manage Volunteers -->
        <Button
            android:id="@+id/admin_manage_reports_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/primary_color"
            android:paddingVertical="14dp"
            android:text="ðŸ‘¥ Manage Volunteers"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Button: Add Announcement -->
        <Button
            android:id="@+id/admin_dashboard_announcement_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/primary_color"
            android:paddingVertical="14dp"
            android:text="ðŸ“¢ Add Announcement"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:paddingVertical="14dp"
            android:text="ðŸšª Logout"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
